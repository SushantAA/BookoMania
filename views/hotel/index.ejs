<% layout('layout/boilerplate') %> 
<link rel="stylesheet" href="/style/index.css">

    <h1 class="header" >All Hotels</h1>
    <a href="/hotel/new" class="btn btn-secondary">create new</a> <br>
    
    <section>
        <div class="row" >
        <% for(let a of all_cg){ %>
            <div class="col-lg-4 col-sm-6 col-xs-12 mb-3">
                <div class="card m-2" >
                    <% if(a.image.length){ %> 
                    <img  src="<%= a.image[0].url %> " class="card-img-top" style='width: auto; height: 13rem;'  >
                    <% } %> 
                    <div class="card-body"  >
                    <h5 class="card-title"><%= a.title %></h5>
                    <p class="card-text"><%= a.location %></p>
                    <a href="/hotel/<%= a._id %>" class="btn btn-sm btn-info">Details</a>
                    </div>
                </div>
            </div>
        <% } %>
        </div>
    </section>

<script src="/scripts/clusterMap.js"></script>